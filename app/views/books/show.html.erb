<div class="book">
	<%= content_tag :span, "#{@book.name} (#{@book.author})", class: "book-title" %>
	<%= link_to 'Edit', edit_book_path(@book) %>
</div>

<div>
	<%= render @book.notes %> <!-- collection of existing notes -->
</div>

<div>
	<%= form_for([@book, @book.notes.new]) do |f| %>
		<div class="field">
			<%= f.label  :title %>
			<%= f.text_field :title %>
		</div>
		<div class="field">
			<%= f.label  :note %>
			<%= f.text_area :note, size: "25x15" %>
		</div>
		<div class="action">
			<%= f.submit  "Add New Note" %>
		</div>
	<% end %>
</div>

<%= link_to 'Back', books_path %> 


